@font-face {
    font-family: "{{ fontName }}";
    src: {{{ src }}};
}

.{{ fontName }}:before {
    display: inline-block;

    font-size: inherit;
    font-family: {{fontName}} !important;
    font-style: normal;
    font-display: swap;

    vertical-align: middle;
    text-rendering: auto;

    -moz-osx-font-smoothing: grayscale;
    -webkit-font-smoothing: antialiased;
}

{{# each codepoints }}
.{{ ../classPrefix }}{{ @key }}:before {
    content: "\\{{ this }}";
}

{{/ each }}
